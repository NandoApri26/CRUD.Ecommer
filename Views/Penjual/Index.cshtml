@using System.Collections;
@model List<Ecommer.Models.Entities.Penjual>
@* @model IEnumerable<Ecommer.Models.Entities.Penjual> *@

@{
    ViewBag.Title = "List Penjual";
}

<h2 class="text-center">Data Penjual</h2>

<table class="table table-striped mt-5">
    <thead>
        <tr>
            @* <th scope="col">No</th> *@
            <th scope="col">Nama Toko</th>
            <th scope="col" class="text-center">Alamat Toko</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody class="table-light">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                    <tr>
                        @* <td>@item.IdPenjual</td> *@
                        <td>@item.NamaToko</td>
                        <td>@item.Alamat</td>
                        <td class="text-center">
                            <a class="btn btn-success" asp-route-id="@item.Id" asp-controller="Penjual" asp-action="Update">Update</a>
                            @* <a class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Penjual" asp-action="Detail">Detail</a> *@
                            <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Penjual" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
            }
        }
        else {
                <h1>Data Penjual null</h1>
        }
    </tbody>
</table>

<div class="col">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Penjual">Tambah Penjual</a>
</div>
